<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称:"
            android:id="@+id/skillName"
            app:layout_constraintHorizontal_weight="2"
            android:layout_weight="1.5"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/skillPosition"
            android:layout_marginLeft="20dp"
            android:text="位置:"
            app:layout_constraintLeft_toRightOf="@id/skillName"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/skillCool"
            android:text="冷却："
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/skillPosition"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/skillWaste"
            android:layout_marginLeft="20dp"
            android:text="蓝耗:"
            app:layout_constraintLeft_toRightOf="@id/skillCool"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/skillDescription"
        android:text="描述:"
        app:layout_constraintTop_toBottomOf="@id/linear"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/skillTip"
        android:text="窍门:"
        app:layout_constraintTop_toBottomOf="@id/skillDescription"
        android:layout_marginLeft="15dp"/>

</android.support.constraint.ConstraintLayout>